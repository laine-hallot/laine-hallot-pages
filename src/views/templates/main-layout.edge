<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script
      defer
      src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
    <link href="/styles.css" rel="stylesheet" />
    <script src="/script.js"></script>
    @if(NODE_ENV === 'development')
      <script src="/update-watcher-client.js"></script>
    @end
    <title>{{title || "Laine Hallot - Site"}}</title>
    @if ($slots.meta)
      {{{ await $slots.meta() }}}
    @endif
  </head>
  <body class="font-mono dark:text-neutral-50">
    <div
      class="w-screen h-screen overflow-scroll bg-neutral-50 dark:bg-neutral-950"
      x-data="page"
      x-on:scroll="handleScroll"
    >
      {{{ await $slots.main() }}}
      <div class="h-32"></div>
    </div>
  </body>
</html>
